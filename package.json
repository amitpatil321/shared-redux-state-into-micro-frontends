{
  "scripts": {
    "install": "npm-run-all --serial install:*",
    "install:host": "cd host && npm install",
    "install:store": "cd store && npm install",
    "install:nav": "cd nav && npm install",
    "start": "npm-run-all --parallel start:*",
    "start:host": "cd host && npm start",
    "start:store": "cd store && npm start",
    "start:nav": "cd nav && npm start"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}